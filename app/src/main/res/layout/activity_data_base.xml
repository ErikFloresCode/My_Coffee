<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataBaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="107dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/principal"
                tools:srcCompat="@drawable/principal" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/menu_database"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#80000000"
                android:padding="8dp" />
        </FrameLayout>
        <!-- formulario para lugares-->
        <EditText
            android:id="@+id/text_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/text_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Descripcion" />

        <EditText
            android:id="@+id/text_latitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Latitud" />

        <EditText
            android:id="@+id/text_longitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Longitud" />

        <Button
            android:id="@+id/button_crear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <Button
            android:id="@+id/button_listar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar" />

        <Button
            android:id="@+id/button_eliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar" />

        <TextView
            android:id="@+id/espacio1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/texto_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lugares"
                android:padding="10dp" />
        </ScrollView>

        <!-- formulario para productos-->
        <EditText
            android:id="@+id/text_nombreproducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/text_descripcionproducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Descripcion" />
        <!--
        <EditText
            android:id="@+id/text_imageproducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Imagen" />
        -->
        <EditText
            android:id="@+id/text_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="precio" />

        <EditText
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="status 1 o 0" />

        <Button
            android:id="@+id/button_crearproducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <Button
            android:id="@+id/button_listarproducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar" />

        <Button
            android:id="@+id/button_eliminarproducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar" />

        <TextView
            android:id="@+id/espacio2"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/texto_boxproductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Productos"
                android:padding="10dp" />
        </ScrollView>

    </LinearLayout>
</ScrollView>
